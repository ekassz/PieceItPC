<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="230dp"
        android:layout_height="320dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Title will be cut if too long"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Description will be cut if too long" />

        <TextView
            android:id="@+id/cardAuthor"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="John Doe" />

        <Button
            android:id="@+id/save_build_button"
            android:layout_width="108dp"
            android:layout_height="49dp"
            android:layout_marginStart="90dp"
            android:text="@string/save_build_text"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/cardAuthor" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
